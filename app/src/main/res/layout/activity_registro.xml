<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <!-- Objeto con Scroll -->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:background="#dee4ee"
            android:orientation="vertical"
            android:padding="@dimen/espacio_norma_1"
            tools:context="com.interfaces.daniel.asoguau.ui.FragmentoPerfil">

            <TextView
                android:id="@+id/titulo_informacion_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/etiqueta_info_usuario"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="@dimen/espacio_norma_1"
                    android:rowCount="4">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:layout_marginRight="@dimen/espacio_norma_2"
                        android:src="@drawable/usuario" />

                    <EditText
                        android:id="@+id/texto_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:hint="Ingresa tu Nombre"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                    <ImageView
                        android:id="@+id/imageNacimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:layout_marginRight="@dimen/espacio_norma_2"
                        android:src="@drawable/usuario" />

                    <EditText
                        android:id="@+id/texto_fnacimeinto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:hint="Ingresa tu Apellido"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/imageCedula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:layout_marginRight="@dimen/espacio_norma_2"
                        android:src="@drawable/usuario" />

                    <EditText
                        android:id="@+id/texto_cedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:hint="Ingresa tu Cedula"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/calendar" />

                    <EditText
                        android:id="@+id/texto_fecha_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:editable="false"
                        android:hint="DD/MM/AAAA"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </GridLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/titulo_contrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/espacio_norma_2"
                android:paddingTop="@dimen/espacio_norma_1"
                android:text="@string/etiqueta_info_cuenta"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:cardUseCompatPadding="true">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="@dimen/espacio_norma_1"
                    android:rowCount="3">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:src="@drawable/email" />

                    <EditText
                        android:id="@+id/texto_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="textEmailSubject"
                        android:hint="tucorreo@host.com"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                    <ImageView
                        android:id="@+id/imageNacimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:layout_marginRight="@dimen/espacio_norma_2"
                        android:src="@drawable/usuario" />

                    <EditText
                        android:id="@+id/texto_fnacimeinto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/espacio_norma_1"
                        android:inputType="textPassword"
                        android:hint="Ingresa una Clave"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <ImageView
                        android:id="@+id/imageCedula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/espacio_norma_2"
                        android:src="@drawable/usuario" />

                    <EditText
                        android:id="@+id/texto_cedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="textPassword"
                        android:hint="Repite la Clave"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </GridLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red_ligth"
                android:shadowRadius="@android:integer/config_mediumAnimTime"
                android:textColor="@color/color_light"
                android:layout_marginTop="@dimen/espacio_norma_1"
                android:padding="@dimen/espacio_norma_2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Registrar"
                android:id="@+id/boton_ingreso"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

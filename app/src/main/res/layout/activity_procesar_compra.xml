<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/espacio_norma_1"
        android:orientation="vertical"
        android:id="@+id/datos_compra">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/espacio_norma_2"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/texto_titulo_pelicula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/espacio_norma_1"
                android:text="Titulo Pelicula"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            android:layout_marginBottom="@dimen/espacio_norma_2"
            card_view:cardUseCompatPadding="true">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_horario"
                android:padding="@dimen/espacio_norma_2"
                android:layout_gravity="center_horizontal"
                android:entries="@array/Horario" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:columnCount="4"
                android:rowCount="3">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="A1"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="A2"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="A3"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="A4"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="B1"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="B2"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="B3"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="B4"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    android:layout_gravity="center"
                    card_view:cardUseCompatPadding="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="C1"
                        android:padding="@dimen/espacio_norma_2"
                        android:textSize="40dp"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </android.support.v7.widget.CardView>
            </GridLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_ligth"
        android:shadowRadius="@android:integer/config_mediumAnimTime"
        android:textColor="@color/color_light"
        android:layout_marginBottom="64dp"
        android:padding="@dimen/espacio_norma_2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comprar"
        android:id="@+id/boton_compra"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
